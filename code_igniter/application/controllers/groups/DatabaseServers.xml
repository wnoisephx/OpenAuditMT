		<group_name>Database Servers</group_name>
		<group_padded_name></group_padded_name>
		<group_dynamic_select><![CDATA[SELECT DISTINCT(system.system_id) FROM system LEFT JOIN server ON (system.system_id = server.system_id AND server.current = 'y') WHERE server.type = 'database' AND system.man_status = 'production']]></group_dynamic_select>
		<group_parent>1</group_parent>
		<group_category>application</group_category>
		<group_display_sql><![CDATA[SELECT system.icon, system.system_id, system.hostname, system.man_os_family, system.man_description, system.man_ip_address, system.man_type, system.man_os_name, system.icon, server.full_name, server.edition FROM system LEFT JOIN server ON (system.system_id = server.system_id AND server.current = 'y' AND server.type = 'database') LEFT JOIN oa_group_sys ON (system.system_id = oa_group_sys.system_id) WHERE oa_group_sys.group_id = ? group by system_id]]></group_display_sql>
		<group_icon>database</group_icon>
		<group_description>Any items that have their status attribute set to 'production' and have their os_name attribute containing 'server' and have rows in the server table that is of type 'database'.</group_description>
